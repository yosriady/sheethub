<%
title "Community Marketplace For Musicians"
description "SheetHub is a community marketplace for musicians. Publish, find, and share your sheet music on SheetHub!"
%>

<div class="animated-banner">
    <h2 class="sheets-subheading">Publish, find, and share sheet music online</h2>
    <h1 class="sheets-heading">The Community Marketplace for Musicians</h1>
    <div class="text-center">
      <a href="<%= sheet_upload_url %>" class="btn btn-success btn-inline btn-banner btn-lg center-block"><em class="fa fa-cloud-upload"></em> Upload</a>
      <a href="<%= sheets_url %>" class="btn btn-default btn-inline btn-banner btn-lg center-block" style="margin-left: 10px;">Discover</a>
    </div>
</div>

<div class="container">
    <div class="col-xs-12">
      <div class="row">
            <h2 class="sheets-heading">Community Spotlight</h2>
            <h4 class="sheets-subheading">Get inspiration from the community's top picks</h4>
            <br />
            <%= render 'sheets/featured_sheets', sheets: @featured %>
      </div>
    </div>
</div>

<%= render 'sheets/instruments_strip', instruments: @instruments %>
<%= render 'sheets/tag_strip', tags: @genres, tag_type:'genre' %>
<%= render 'sheets/tag_strip', tags: @composers, tag_type:'composer' %>
<%= render 'sheets/tag_strip', tags: @sources, tag_type:'source' %>

<div class="container">
    <div class="col-xs-12">
      <div class="row">
            <h2 class="sheets-heading">Recently Uploaded</h2>
            <br/>
            <%= render 'sheets/sheets', sheets: @sheets %>
      </div>
      <div class="row">
        <br/>
        <div class="flat-tags text-center">
          <a href="<%= sheets_url %>"><span class="tag">Discover More Music</span></a>
        </div>
      </div>
    </div>
</div>
<%= render 'layouts/upload_banner' %>
<%= render 'layouts/featured_users', users: @featured_users %>

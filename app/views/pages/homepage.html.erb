<%
title "Community Marketplace For Musicians"
description "SheetHub is a community marketplace for musicians. Publish, find, and share your sheet music on SheetHub!"
%>

<div class="animated-banner">
    <h1 class="sheets-heading">Publish, find, and share sheet music online. Easy.</h1>
    <h2 class="sheets-subheading">Community Marketplace for Musicians. <%= link_to "Upload", sheet_upload_url %>.</h2>
</div>

<div class="container">
    <div class="col-xs-12">
      <div class="row">
            <div class="flat-tags text-center">
              <a href="<%= sheets_url %>"><span class="tag active">New To SheetHub</span></a>
              <a href="<%= best_sellers_url %>"><span class="tag">Best Sellers</span></a>
              <a href="<%= community_favorites_url %>"><span class="tag">Community Favorites</span></a>
            </div>
            <br/>
            <%= render 'sheets/sheets', sheets: @sheets %>
    </div>
    </div>
</div>

<%= render 'sheets/instruments_strip', instruments: @instruments %>
<%= render 'sheets/tag_strip', tags: @genres, tag_type:'genre' %>
<%= render 'sheets/tag_strip', tags: @composers, tag_type:'composer' %>
<%= render 'sheets/tag_strip', tags: @sources, tag_type:'source' %>

<div class="container">
    <div class="col-xs-12">
      <div class="row">
            <a href="<%= community_favorites_url %>"><h2 class="sheets-heading">Community Spotlight</h2></a>
            <h4 class="sheets-subheading"><em class="fa fa-star-o"></em> Get inspiration from these SheetHub members' top picks</h4>
            <br />
            <%= render 'sheets/featured_sheets', sheets: @featured %>
      </div>
    </div>
</div>

<%= render 'layouts/sign_up_banner' %>
<%= render 'layouts/upload_banner' %>

<li id="user-dropdown" class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= image_tag(current_user.avatar_url, class: 'navbar-avatar') %></a>
  <ul class="dropdown-menu" role="menu">

  <% if current_user.finished_registration? %>
    <li><a href="<%= user_profile_url(subdomain:current_user.username) %>"><em class="fa fa-user"></em> My Profile</a></li>
    <% if current_user.has_published %>
      <li><a href="<%= user_dashboard_url %>"><em class="fa fa-music"></em> My Works</a></li>
    <% end %>
    <li><a href="<%= user_library_url %>"><em class="fa fa-download"></em> My Library</a></li>
    <hr>
    <li><a href="<%= user_settings_url %>"><em class="fa fa-cog"></em> Settings</a></li>
    <li><a href="<%= support_url %>"><em class="fa fa-support"></em> Support</a></li>
  <% end %>
    <hr>
    <li><%= link_to destroy_user_session_url, :method => :delete do %><em class="fa fa-sign-out"></em> Sign Out<% end %></li>
  </ul>
</li>
<% title "Sign In"
   description "Sign In to SheetHub, the easiest publishing platform for musicians."
%>

<div class="container">
  <div class="row">
    <h1 class="text-center">Sign In to Continue</h1>

    <div class="col-md-4 col-md-offset-4">
        <div class="white-container">
        <%= render "devise/shared/omniauth_links" %>
        <%= render "layouts/line_divider" %>

        <%= simple_form_for(resource, as: resource_name, url: session_url(resource_name), defaults: { input_html: { class: 'form-control' }}) do |f| %>
        <div class="form-inputs">
            <div class="input-group">
              <span class="input-group-addon"><em class="fa fa-envelope-o"></em></span>
                <%= f.input_field :email, required: false, placeholder: 'Email', autofocus: true %>
            </div>
            <div class="input-group">
              <span class="input-group-addon"><em class="fa fa-key"></em></span>
                <%= f.input_field :password, placeholder: 'Password', required: false %>
            </div>
            <%= link_to "Forgot your password?", new_password_url(resource_name), class:'pull-right' %><br />
        </div>

        <div class="form-actions">
            <%= f.button :submit, "Sign In", class:"btn btn-success btn-wide btn-lg btn-block" %>
        </div>
        <% end %>

        </div>
        <%= render "devise/shared/links" %>
    </div>
</div>
</div>

<div class="container">
  <div class="row">

    <div class="col-lg-6 white-container">
    <h2>Resend Confirmation Instructions</h2>
    <hr>
    <%= simple_form_for(resource, as: resource_name, url: confirmation_url(resource_name), html: { method: :post }, defaults: { input_html: { class: 'form-control' }}) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :confirmation_token %>
      <%= f.input :email, required: true, autofocus: true, placeholder: 'Your email address' %>
      <br />
      <%= f.button :submit, "Resend", class: "btn btn-lg btn-success" %>
    <% end %>
    </div>
  </div>
</div>
<%
title "Editing #{@sheet.title}"
description "#{@sheet.title} sheet music on SheetHub, the easiest publishing platform for musicians. #{@sheet.description}"
keywords @sheet.cached_joined_tags
%>

<div class="container">
    <div class="row">
      <div id="sheet-content" class="col-xs-8">
        <h1 class="text-center">Editing <%= @sheet.title %></h1>
        <hr>
        <%= image_tag(@sheet.pdf_preview_url, :class => "sample_sheet") %>
      </div>

      <div id="sheet-sidebar" class="col-xs-4">
          <a href="<%= sheet_url(@sheet) %>", class="btn btn-default btn-block"><em class="fa fa-angle-left"></em> Back to <%= @sheet.title %></a>
          <br />
          <div class="panel panel-info">
            <div class="panel-body">
                  <%= render 'form', sheet: @sheet, genres: @genres, composers: @composers, sources: @sources %>
            </div>
          </div>

          <%= render 's3_uploader', sheet: @sheet %>

          <div class="panel panel-danger">
            <div class="panel-heading"><em class="fa fa-warning"></em> Danger Zone</div>
            <div class="panel-body">
                  <%= link_to raw("<em class='fa fa-trash'></em> Delete this Sheet"), @sheet, method: :delete, data: { confirm: 'Are you sure you want to delete this sheet? You can restore deleted sheets at any time from the Trash page.' }, class:"btn btn-danger" %>
            </div>
          </div>
      </div>
    </div>
</div>

<%
title "Contact"
description "SheetHub Contact"
keywords %w(contact support)
%>

<div class="animated-banner">
    <h2>Have questions? We're happy to help!</h2>
    <h1><em class="fa fa-paper-plane"></em> Contact Us</h1>
</div>

<div class="container">
  <div class="row">

    <div class="col-xs-8 white-container">
      <%= render 'contact_form/form', contact: @contact %>
    </div>
    <div class="col-xs-4">
        <a href="<%= support_url %>" class="btn btn-block btn-lg btn-default"><em class="fa fa-support"></em> Support Center</a>
        <br/>
        <div class="panel panel-default">
            <%= render 'layouts/twitter_widget' %>
        </div>

    </div>
  </div>
</div>
